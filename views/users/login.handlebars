<div id="loginsignupTable">

<div id="loginTable" style="float: inline-end;">
<form id="login-form" method="POST" action="/users/login">
<h1>Log In</h1>
    <div class="form-group">
        <label for="input-useremail-login"> User Email</label>
        <input type="email" id="input-usereamil-login" name="useremail" placeholder="useremail" value="{{input-usereamil}}">
    </div>

    <div class="form-group">
        <label for="input-password-login">Password  </label>
        <input type="password" id="input-password-login" name="password" value="{{input-password}}">
    </div>
    <div class="form-group hidden" id="error-container" hidden>
        <div class="alert alert-danger text-goes-here">
        </div>
    </div>
    <div class="form-group">
      {{#if hasLogInErrors}}
      <p class="error">{{error}}!</p>
      {{/if}}
